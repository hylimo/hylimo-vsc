{
    "name": "hylimo-vsc",
    "displayName": "hylimo-vsc",
    "description": "HyLiMo hybrid diagramming support for VSCode",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.84.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:plaintext"
    ],
    "main": "./client/out/extension.js",
    "contributes": {
        "configuration": {
            "properties": {
                "hylimo.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "verbose",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        },
        "languages": [
            {
                "id": "hylimo",
                "extensions": [
                    ".hyl",
                    ".hylimo"
                ],
                "aliases": [
                    "HyLiMo",
                    "hyl"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "commands": [
            {
                "command": "hylimo.diagram.open",
                "title": "Open graphical view",
                "icon": "$(open-preview)",
                "category": "HyLiMo Diagram"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "hylimo.diagram.open",
                    "when": "editorLangId == 'hylimo'"
                }
            ],
            "editor/context": [
                {
                    "command": "hylimo.diagram.open",
                    "when": "editorLangId == 'hylimo'",
                    "group": "navigation"
                }
            ],
            "editor/title": [
                {
                    "command": "hylimo.diagram.open",
                    "when": "editorLangId == 'hylimo'",
                    "group": "navigation"
                }
            ],
            "explorer/context": [
                {
                    "command": "hylimo.diagram.open",
                    "when": "resourceExtname == '.sm'",
                    "group": "navigation"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "format": "prettier --write \"**/*.{ts,json,js,tsx,jsx}\"",
        "postinstall": "cd client && npm install && cd ../server && npm install && cd .."
    },
    "devDependencies": {
        "@types/mocha": "^10.0.6",
        "@types/node": "18.x",
        "@types/vscode": "^1.84.0",
        "@typescript-eslint/eslint-plugin": "^6.13.1",
        "@typescript-eslint/parser": "^6.13.1",
        "@vscode/test-cli": "^0.0.4",
        "@vscode/test-electron": "^2.3.8",
        "eslint": "^8.54.0",
        "prettier": "^3.1.0",
        "typescript": "^5.3.2"
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "none",
        "printWidth": 120
    }
}
